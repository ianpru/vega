{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic scatter plot",
  "width": 400,
  "height": 200,
  "padding": 5,

  "data": [
    {
      "name": "table",
      "values": [
        {"category": "A", "amount": 28, "Acceleration": 1},
        {"category": "B", "amount": 55, "Acceleration": 1},
        {"category": "C", "amount": 43, "Acceleration": 1},
        {"category": "D", "amount": 91, "Acceleration": 1},
        {"category": "E", "amount": 81, "Acceleration": 1},
        {"category": "F", "amount": 53, "Acceleration": 1},
        {"category": "G", "amount": 19, "Acceleration": 1},
        {"category": "H", "amount": 87, "Acceleration": 1}
      ]
    }
  ],
  
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "domain": {"data": "table", "field": "category"},
      "range": "width",
      "nice": true,
      "round": true,
      "zero": true
    },
    {
      "name": "yscale",
      "domain": {"data": "table", "field": "amount"},
      "round": true,
      "nice": true,
      "zero": true,
      "range": "height"
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 5,
      "title": "Category"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 5,
      "title": "amount"
    }
  ],

  "legends": [
    {
      "size": "size",
      "title": "Acceleration",
      "format": "s",
      "symbolStrokeColor": "#4682b4",
      "symbolStrokeWidth": 2,
      "symbolOpacity": 0.5,
      "symbolType": "circle"
    }
  ],

  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {"data": "source"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "category"},
          "y": {"scale": "y", "field": "amount"},
          "size": {"scale": "size", "field": "Acceleration"},
          "shape": {"value": "circle"},
          "strokeWidth": {"value": 2},
          "opacity": {"value": 0.5},
          "stroke": {"value": "#4682b4"},
          "fill": {"value": "transparent"}
        }
      }
    }
  ]
}
